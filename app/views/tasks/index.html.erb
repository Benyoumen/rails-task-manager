  <div class="row">

    <% @tasks.each do |task| %>

      <div class="col-md-6">
        <div class="card mb-3">

          <h5 class="card-header">
            <%= link_to task.title, task_path(task) %>
          </h5>

          <div class="card-body">
            <p class="card-text"><%= task.details %></p>

            <%= link_to task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
